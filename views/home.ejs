<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Video call</title>
    <link rel="stylesheet" href="app.css">
    <link rel="stylesheet" href="bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="bootstrap/css/bootstrap-theme.css">
  </head>
  <body>
    <div class="row" style="margin-top:30px">
      <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-primary">
          <div class="panel-heading text-center">
              <h3><b>VIDEO CALL</b></h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-9 text-right" style="position:relative">
                <video id="friendStream" style="border-radius:3px" width="100%" controls></video>
                <video width="17%" id="localStream" style="position:absolute; left:20px; top:5px;border-radius:5px" controls></video>
              </div>
              <div class="col-md-3">
                <h4><b>USER ONLINE</b></h4>
                <ul id="ulUser">

                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </body>
  <script src="socket.io.js"></script>
  <script src="peer.js"></script>
  <script src="bundle.js"></script>
</html>
